{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@utils/*": ["./src/utils/*"],
      "@styles/*": ["./src/styles/*"],
      "@solid/*": ["./src/solid/*"],
      "@enums/*": ["./src/enums/*"],
      "@views/*": ["./src/views/*"],
      "@errors/*": ["./src/errors/*"],
      "@ncs-api/*": ["./src/ncs-api/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}
